@using QuizExam.Core.Models.TakeExam
@model UncompletedExamsVM
@{
    ViewData["Title"] = "Незавършени изпити";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Незавършени изпити</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-wrap">
                    <thead>
                        <tr>
                            <th style="width: 10px"></th>
                            <th style="text-align: center;">Заглавие</th>
                            <th style="text-align: center;">Предмет</th>
                            <th style="text-align: center;">Започнат</th>
                            <th style="text-align: center;">Въпроси</th>
                            <th style="text-align: center; width: 15%;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exam in Model.UncompletedExams)
                        {
                            <tr>
                                <td class="text-right py-0 align-middle">
                                    <form method="post">
                                        <div class="btn-group btn-group-sm">
                                                <a asp-action="getTakeResult" asp-controller="takeExam" asp-route-takeId="@exam.TakeId" class="btn btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </form>
                                </td>
                                <td style="text-align: center;">@exam.Title</td>
                                <td style="text-align: center;">@exam.SubjectName</td>
                                <td style="text-align: center;">@exam.StartDate</td>
                                <td style="text-align: center;">@exam.TakenQuestionsCount / @exam.AllQuestionsCount</td>
                                <td style="text-align: center;">
                                    <div class="progress progress-xs">
                                        @{
                                            decimal progress = ((decimal)exam.TakenQuestionsCount / (decimal)exam.AllQuestionsCount) * 100;
                                        }
                                        <div class="progress-bar progress-bar-danger" style="width: @progress%"></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <paging page-no="@Model.PageNo"
                    page-size="@Model.PageSize"
                    total-records="@Model.TotalRecords"
                    page-size-dropdown-items="5-10-25">
            </paging>
        </div>
    </div>
</div>
