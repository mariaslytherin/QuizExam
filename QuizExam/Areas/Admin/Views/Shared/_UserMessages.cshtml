@using QuizExam.Core.Constants

@if (TempData[SuccessMessageConstants.SuccessMessage] != null)
{
    <script>
        $(function() {
            toastr.success('@TempData[SuccessMessageConstants.SuccessMessage]?.ToString()');
        });
    </script>
}

@if (ViewData[ErrorMessageConstants.ErrorMessage] != null)
{
    <script>
        $(function() {
            toastr.error('@ViewData[ErrorMessageConstants.ErrorMessage]?.ToString()');
        });
    </script>
}

@if (ViewData[WarningMessageConstants.WarningMessage] != null)
{
    <script>
        $(function() {
            toastr.warning('@ViewData[WarningMessageConstants.WarningMessage]?.ToString()');
            });
    </script>
}
