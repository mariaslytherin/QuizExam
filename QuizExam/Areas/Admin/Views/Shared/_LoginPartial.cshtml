@using Microsoft.AspNetCore.Identity
@using QuizExam.Infrastructure.Data.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

<div class="user-panel mt-3 pb-3 mb-3 d-flex">
    <div class="image dropdown">
        <img src="~/img/avatar5.png" class="img-circle elevation-2" alt="User Image">
    </div>
    <div class="info">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="d-block">@user?.FirstName @user?.LastName</a>
    </div>
</div>
