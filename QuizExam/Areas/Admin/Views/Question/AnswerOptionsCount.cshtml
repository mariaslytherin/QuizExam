@using QuizExam.Core.Models.NewFolder
@using QuizExam.Infrastructure.Data.Enums
@model AnswerOptionsCountVM

<div class="row">
    <div class="col-4">
        <div class="card card-primary">
            <div class="card-header">
            </div>
            <form id="edit" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Count"></label>
                        <select asp-for="Count" name="Count" asp-items="@ViewBag.CountOptions" class="form-control" id="simpleSelect2" data-placeholder="Избери брой">
                            <option></option>
                        </select>
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*TODO*@
                        <label asp-for="Type"></label>
                        <select asp-for="Type" name="Type" asp-items="@ViewBag.QuestionTypes" class="form-control" id="simpleSelect2" data-placeholder="Избери брой">
                            <option></option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="new" asp-controller="question" type="submit" class="btn btn-primary">Next</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}