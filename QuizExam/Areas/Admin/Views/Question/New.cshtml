@using QuizExam.Core.Models.Question
@model NewQuestionVM

@{
    ViewData["Title"] = "Добави въпрос";
}

<div class="row d-flex justify-content-center">
    <div class="col-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Добави въпрос</h3>
            </div>
            <form id="edit" method="post">
                <div class="card-body">
                    <input type="hidden" name="ExamId" value="@Url.ActionContext.RouteData.Values["id"]"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Content" class="form-label"></label>
                        <textarea asp-for="Content" type="text" class="form-control" placeholder="Въведи въпрос..." aria-required="true"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rule" class="form-label"></label>
                        <textarea asp-for="Rule" type="text" class="form-control" placeholder="Въведи правило..."></textarea>
                        <span asp-validation-for="Rule" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Points" class="form-label"></label>
                        <input asp-for="Points" type="number" min="0.0" step=".1" style="width: 25%;" class="form-control" aria-required="true">
                        <span asp-validation-for="Points" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="viewExam" asp-controller="exam" asp-route-id="@Url.ActionContext.RouteData.Values["id"]" class="btn btn-outline-primary" style="width:auto">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}