@using QuizExam.Core.Models
@model List<UserRolesVM>
@{
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
    <div class="col-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Manage User Roles</h3>
            </div>
            <form id="roles" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label value="@ViewBag.UserFullName" class="form-label"></label>
                        <input value="@ViewBag.UserFullName" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label>Roles:</label>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input asp-for="@Model[i].Selected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model[i].Selected">
                                    @Model[i].RoleName
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" asp-area="Admin" asp-action="SetRoles" asp-controller="User" asp-route-id="@ViewBag.UserId" class="btn btn-primary">Submit</button>
                    <a asp-action="GetAllUsers" class="btn btn-outline-primary" style="width:auto">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>