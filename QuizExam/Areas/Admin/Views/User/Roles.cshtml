}

<div class="row">
    <div class="col-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">User Roles</h3>
            </div>
            <form id="roles" method="post">
                <div class="card-body">
                    <input type="hidden" name="Id" value="@Model.UserId" />
