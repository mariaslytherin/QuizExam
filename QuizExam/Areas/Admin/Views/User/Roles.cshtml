@using QuizExam.Core.Models
@model UserRolesVM
@{
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
    <div class="col-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">User Roles</h3>
            </div>
            <form id="roles" method="post">
                <div class="card-body">
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label>User Roles</label>
                        <select asp-for="RoleNames" asp-items="@items" multiple="" class="form-control">
                        </select>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="GetAllUsers" class="btn btn-outline-primary" style="width:auto">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>