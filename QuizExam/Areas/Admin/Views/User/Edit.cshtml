@using QuizExam.Core.Models
@model UserEditVM

@{
    ViewData["Title"] = "Редакция";
}

<div class="row d-flex justify-content-center">
    <div class="col-4">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Редакция на потребител</h3>
            </div>
            <form id="edit" method="post">
                <div class="card-body">
                    <input type="hidden" name="Id" value="@Model.Id"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" type="text" class="form-control" aria-required="true">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" type="text" class="form-control" aria-required="true">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-info">Запази</button>
                    <a asp-action="GetAllUsers" class="btn btn-outline-secondary" style="width:auto">Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
