@using QuizExam.Core.Models.Exam
@model EditExamVM
@{
    ViewData["Title"] = "Edit Exam";
}

<div class="row">
    <div class="col-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Edit Exam</h3>
            </div>
            <form id="edit" method="post">
                <div class="card-body">
                    <input type="hidden" name="Id" value="@Model.Id"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="Enter exam title..." aria-required="true">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" type="text" class="form-control" placeholder="Enter exam description..." aria-required="true"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Subject</label>
                        <select name="SubjectName" class="form-control" id="simpleSelect2" data-placeholder="Select a subject" disabled="disabled">
                            <option>@Model.SubjectName</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxScore" class="form-label"></label>
                        <input asp-for="MaxScore" type="number" style="width: 25%;" class="form-control" placeholder="Score" aria-required="true">
                        <span asp-validation-for="MaxScore" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Edit</button>
                    <a asp-action="GetExamsList" class="btn btn-outline-primary" style="width:auto">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}