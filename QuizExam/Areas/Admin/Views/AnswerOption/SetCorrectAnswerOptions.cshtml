@using QuizExam.Core.Models.Question
@model QuestionExamVM

@{
    var content = TempData["QuestionContent"];
    var options = ViewBag.Options;
}

<div class="row d-flex justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <div class="card-tools">
                    @*<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>*@
                </div>
                @*<div class="row col-sm-4">
                    <a class="btn btn-outline-secondary btn-sm" style="width: 70px; margin-right: 5px; height: fit-content;">Edit</a>
                    <button type="button" class="btn btn-outline-dark btn-sm" style="width: 70px; height: fit-content;">Delete</button>
                    </div>*@
            </div>
            <div class="card-body" style="display: block;">
                @content
                @foreach (var option in options)
                {
                    <div class="custom-control custom-checkbox" style="margin-left: 30px; margin-top: 10px;">
                        <input class="custom-control-input" type="checkbox" id="customCheckbox2">
                        <label for="customCheckbox2" class="custom-control-label">@option.Content</label>
                    </div>
                }
            </div>
            <div class="card-footer" style="display: block;">
                <div class="row">
                    <form method="post" class="col-sm-4">
                        <a asp-action="edit" asp-controller="question" class="btn btn-outline-secondary btn-sm" style="width: 70px; margin-right: 5px; height: fit-content;">Edit</a>
                        <button asp-action="Delete" asp-controller="Question" type="submit" class="btn btn-outline-dark btn-sm" style="width: 70px; height: fit-content;">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>