@using QuizExam.Core.Models.AnswerOption
@model AddAnswerOptionVM

@{
    ViewData["Title"] = "Добавяне";
    var questionId = Url.ActionContext.RouteData.Values["id"];
    var examId = TempData["ExamId"];
}

<div class="row d-flex justify-content-center">
    <div class="col-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Добави опция за отговор</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <input type="hidden" name="QuestionId" value="@questionId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AnswerOption" class="form-label"></label>
                        <textarea asp-for="AnswerOption" type="text" class="form-control" placeholder="Въведи опция..." aria-required="true"></textarea>
                        <span asp-validation-for="AnswerOption" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <form method="post">
                        <button type="submit" asp-action="newOption" asp-controller="answerOption" asp-route-examId="@examId" class="btn btn-primary">Добави</button>
                        <a asp-action="edit" asp-controller="question" asp-route-id="@questionId" asp-route-examId="@examId" class="btn btn-outline-primary" style="width:auto">Назад</a>
                    </form>
                </div>
            </form>
        </div>
    </div>
</div>