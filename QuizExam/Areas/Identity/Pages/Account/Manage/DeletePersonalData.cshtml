@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтриване на лични данни";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-warning" role="alert">
            <p>
                <strong>Изтриването на тези данни ще премахне завинаги вашия акаунт и той не може да бъде възстановен.</strong>
            </p>
        </div>
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="btn btn-md btn-danger" type="submit">Изтрий данните и излез от акаунта</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
